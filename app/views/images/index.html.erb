<% @dig.images.each do |image| %>
  <%= image_tag image.photo.url(:thumb) %>
  <%= button_to "Delete Image", { :action => "delete", :id => image.id }, :confirm => "Are you sure?", :method => :delete %>
<% end %>
<br/>

<% if @dig.images.size < 2 %>
  Add Image:
  <% form_for :images, :html => { :multipart => true } do |image| %>
    <%= image.file_field :photo %>
    <%= submit_tag %>
  <% end %>
<% end %>